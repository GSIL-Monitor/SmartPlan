/* components/msgModal/msgModal.wxss */

.msg-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.msg-modal {
  z-index: 3000;
  width: 80%;
  height: 300px;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  overflow: hidden;
  border-radius:5px; 
}

.msg-title {
  width: 100%;
  text-align: center;
  line-height: 40px;
  height: 40px;
  border: 2px #f6f6f6 solid;
}
.msg-content{
  padding: 5px;
}
.msg-box {
  height: 72%;
}

.btn-box {
  height: 28%;
  border: 2px #f6f6f6 solid;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 70%;
  height: 30px;
  color: #fff;
  line-height: 30px;
  text-align: center;
  background: #ccc;
  margin: 2px auto;
  border-radius: 5px;
}
.del{
  background: red;
}
.cancel{
  background: #888;
}
