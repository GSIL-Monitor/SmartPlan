<form bindsubmit='addNotepad'>
  <view class='save-container'>
    <view class='save-title'>
      <input name="title" focus placeholder='输入标题'></input>
    </view>
    <view class='save-content'>
      <textarea name="content" placeholder='输入内容'></textarea>
    </view>
    <view class='save-btn'>
      <button form-type="submit">保存</button>
    </view>
  </view>
</form>