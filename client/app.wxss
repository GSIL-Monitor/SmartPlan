/**app.wxss**/
@import 'weui.wxss';
@import 'pages/template/plan.wxss';
@import 'pages/template/statistics.wxss';

page {
  background: #f6f6f6;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 16px;
}

.gt {
  width: 10%;
  text-align: center;
  color: #888;
}

.save-container {
  margin: 0 auto;
  width: 95%;
}

.save-btn {
  position: fixed;
  left: 0;
  right: 0;
  width: 100%;
}

.save-btn button {
  width: 90%;
  background: #00abff;
  color: #fff;
}

.save-content {
  height: 120px;
  background: #ffff;
  margin: 10px auto;
  padding: 5px;
  width: 95%;
  border-radius: 5px;
}

.save-content textarea {
  height: 100px;
  width: 100%;
}
